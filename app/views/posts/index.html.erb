
<%= render "welcome/header" %>


<h1>Blog Posts</h1>
 

<%= link_to 'Post some new words', new_post_path %>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th></th>
    <th></th>
  </tr>
 
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.text %></td>
      <td><%= link_to 'Show', post %></td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
      <td><%= link_to 'Destroy', post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %><td/> 

   </tr>
  <% end %>
</table>

<p/>
<%= link_to 'To the main page', welcome_index_path %>
