
<%= render "welcome/header" %>


  <!-- Main jumbotron for a primary marketing message or call to action -->
  <div class="jumbotron alert-danger">
    <div class="container ">

      <h2><b>Articles/Blog Entries</b>
        <%= link_to '<span class="glyphicon glyphicon-plus"></span>'.html_safe, new_post_path, :class=> "btn btn-danger" %>
      </h2>
 <p>



      <div class="panel " style="border-color:black">

        <div class="panel-heading navbar-inverse" >
          <h3 class="panel-title"> </h3>
        </div>
        <div class="panel-body" style="font-size: 14px">

          <table class="table table-bordered table-condensed table-striped table-hover">
            <tr>
              <th>Title</th>
              <th>Text</th>
              <th></th>
              <th></th>
              <th></th>
            </tr>

            <% @posts.each do |post| %>
                <tr>
                  <td><%= post.title %></td>
                  <td><%= post.text %></td>
                  <td><%= link_to 'Show', post %></td>
                  <td><%= link_to 'Edit', edit_post_path(post) %></td>
                  <td><%= link_to 'Destroy', post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %><td/>

                </tr>
            <% end %>
          </table>

        </div>

      </div>




<br/>
<%= link_to 'To the main page', welcome_index_path %>


      </div>
    </div>


<div class="container theme-showcase">

</div> <!-- /container -->