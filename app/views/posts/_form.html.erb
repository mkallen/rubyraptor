<%= form_for  @post do |f|  %>
  <% if @post.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <h3><span class="glyphicon glyphicon-ban-circle"></span> <%= pluralize(@post.errors.count, "error") %> prevented
      changes from being saved:</h3>
    <ul>
    <% @post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>


    <div class="form-horizontal" style="margin-right: 150px;">
      <div class="form-group">
       <%= f.label :title, 'Title', :class=>"col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :title, :class=>"form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :text, 'Summary', :class=>"col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_area :text, :class=>"form-control" %>
        </div>
      </div>
      <div class="form-group">
        <script type="text/javascript" src="http://js.nicedit.com/nicEdit-latest.js"></script> <script type="text/javascript">

          bkLib.onDomLoaded(function() {
              new nicEditor().panelInstance('post_content');
          });

      </script>
        <%= f.label :content, 'Content', :class=>"col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_area :content, :class=>"form-control", :style=>"height:300px" %>
        </div>
      </div>


      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit :class=>"btn btn-danger" %>
        </div>
      </div>
    </div>


<% end %>




