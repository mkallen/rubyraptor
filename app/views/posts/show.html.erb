
<%= render "welcome/header" %>




<div class="media ">
  <div class="pull-left well-sm" >

    <%= image_tag "/assets/iconme.png", :class => "media-object thumbnail" %>
  </div>
  <div class="media-body ">
    <div class="well-sm">

      <h3><b><span class="glyphicon glyphicon-random"> </span> <%= @post.title %></b></h3>
      <h3><span class="glyphicon glyphicon-calendar"></span> @post.date </h3>
      <p class="lead alert alert-danger"><%= @post.text %></p>

    </div></div>
</div>




<h2>Comments</h2>
<%= render @post.comments  %>

<h2>Add a comment:</h2>
<%= render "comments/form" %>

<%= link_to 'Back', posts_path %> 
 | <%= link_to 'Edit', edit_post_path(@post) %>
